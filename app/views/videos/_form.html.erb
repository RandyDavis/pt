<%= form_for(@video) do |f| %>
  <p>
    <%= f.label :title %> <br>
    <%= f.text_field :title, autofocus: true %>
  </p>
  <p>
    <%= f.label :description %> <br>
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :youtube_id %> <br>
    <%= f.text_field :youtube_id %>
  </p>
  <p>
    <%= f.submit %> |
    <%= link_to "Cancel", videos_path %>
  </p>
<% end %>