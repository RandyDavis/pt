<h1><%= pluralize(@videos.size, 'Video') %>  Available</h1>

<h3><%= link_to 'Add New Video', new_video_path %></h3>

<% @videos.each do |video| %>
  <article>
    <header>
      <h2><%= link_to(video.title, video) %></h2>
    </header>
    <p>
      <%= truncate(video.description, length: 40, separator: ' ') %>
    </p>
  </article>
<% end %>
