<h1><%= pluralize(@exercises.size, 'Exercise') %>  to choose from</h1>

<h3><%= link_to 'Add New Exercise', new_exercise_path %></h3>

<% @exercises.each do |exercise| %>
  <article>
    <header>
      <h2><%= link_to(exercise.name, exercise) %></h2>
    </header>
    <p>
      <%= truncate(exercise.description, length: 40, separator: ' ') %>
    </p>
    <table>
      <tr>
        <th>Difficulty Level:</th>
        <td><%= exercise.difficulty %></td>
      </tr>
    </table>
  </article>
<% end %>
