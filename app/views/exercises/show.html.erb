<article>
  <header>
    <h1><%= @exercise.name %></h1>
  </header>
  <p>
    <%= @exercise.description %>
  </p>
  <h3>Difficulty Level:</h3>
  <p>
    <%= @exercise.difficulty %>
  </p>
</article>

<%= link_to 'All Exercises', exercises_path %> | 
<%= link_to 'Edit', edit_exercise_path(@exercise) %> | 
<%= link_to 'Delete', exercise_path(@exercise), method: :delete, data: {confirm: 'Are you sure?'} %>