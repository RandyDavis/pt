<h1><%= pluralize(@categories.size, 'Category') %>  Available</h1>
<p>
  
<h3><%= link_to 'Add New Category', new_category_path %></h3> 
</p>

<% @categories.each do |category| %>
  <article>
    <header>
      <h2><%= link_to(category.name, category) %></h2>
    </header>
    <p>
      <%= truncate(category.description, length: 40, separator: ' ') %>
    </p>
  </article>
<% end %>

