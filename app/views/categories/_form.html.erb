<%= form_for(@category) do |f| %>
  <p>
    <%= f.label :name %> 
    <%= f.text_field :name, autofocus: true, placeholder: "category name" %>
  </p>
  <p>
    <%= f.label :description %> 
    <%= f.text_area :description, placeholder: "category description" %>
  </p>
  <p>
    <%= f.submit %> | 
    <%= link_to "Cancel", categories_path %>
  </p>
<% end %>